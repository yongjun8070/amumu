const express = require('express');
const cors = require('cors');
const { Pool } = require('pg');
const axios = require('axios');
require('dotenv').config();

const app = express();
const PORT = process.env.PORT || 5000;

// 미들웨어
app.use(cors());
app.use(express.json());

// PostgreSQL 연결
const pool = new Pool({
  user: process.env.DB_USER || 'postgres',
  host: process.env.DB_HOST || 'localhost',
  database: process.env.DB_NAME || 'amumu_land',
  password: process.env.DB_PASSWORD || 'password',
  port: process.env.DB_PORT || 5432,
});

// Riot API 설정
const RIOT_API_KEY = process.env.RIOT_API_KEY;
const RIOT_API_BASE_URL = 'https://kr.api.riotgames.com';

// 기본 라우트
app.get('/', (req, res) => {
  res.json({ message: '🎮 아무무 랜드 API 서버가 실행 중입니다!' });
});

// 서버 시작
app.listen(PORT, () => {
  console.log(`🎮 아무무 랜드 서버가 포트 ${PORT}에서 실행 중입니다!`);
  console.log(`http://localhost:${PORT} 에서 접속 가능합니다.`);
});
